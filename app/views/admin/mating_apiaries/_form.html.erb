<%= f.inputs do %>
  <%= f.input :name %>
  <%= f.input :address,
              :input_html => {
                :class => 'autogrow',
                :rows => 10,
                :cols => 20,
                :maxlength => 10
              }  %>
  <%= f.input :lat %>
  <%= f.input :lon %>

<% end %>
<h2><%= t('mating_units.mating_units') %>
<ol id="mating_units">
  <%= f.fields_for :places, class: 'form-inline' do |place| %>
    <%= render :partial => 'place_fields', :locals => { :place => place } %>
  <% end %>
</ol>

<%= link_to_add_places t('mating_units.add_unit'), f, :places %>



<%= f.actions do   %>
  <%= f.action :submit,
               :as => :button
  %>
<% end %>